<%= semantic_form_for @task do |f| %>
  <%= f.inputs do %>
    <%= f.input :proyect, :collection => current_user.proyects.uniq, :include_blank => "Select proyect" %>
    <%= f.input :description %>
    <%= f.input :hours, :as => :select, :collection => Task.get_hours_options, :include_blank => false %>
    <%= f.input :is_billable %>
    <%= f.input :date_add %>
  <% end %>
  <%= f.actions do %>
    <%= f.action :submit, :as => :button %>
    <%= f.action :cancel, :as => :link, :url => tasks_path, :label => "Cancel" %>
  <% end %>
<% end %>
