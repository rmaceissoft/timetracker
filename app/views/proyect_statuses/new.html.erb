<h1>New Project Status</h1>

<%= semantic_form_for @proyect_status do |f| %>
  <%= f.inputs do %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :active %>
  <% end %>
  <%= f.actions do %>
    <%= f.action :submit, :as => :button %>
    <%= f.action :cancel, :as => :link, :url => proyect_statuses_path, :label => "Cancel" %>
  <% end %>
<% end %>